<form id="form" method='post'>
    <p>請輸入想要分詞的中文：</p>
    <textarea id='text' name='text' cols="45" rows="10">任何一句完整的中文也可</textarea> <br/>
    <input name='go' id="go" value='去！' type="button"/>
</form>

<div id="result">
</div>

<script type="text/javascript">
renderResult = function(items){
	$("#result").html("");
    for(var i in items){
		$("#result").append("<span class='word'>" + items[i] + "</span>");	
    }
}

$("#go").bind("click", function(e){
	$.getJSON("/segmenter?callback=?",
	 	{'text': $("#text").val()}, function(data){renderResult(data)} );
});
</script>

